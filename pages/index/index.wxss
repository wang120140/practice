page{
  background: #fff;
  font-family: '微软雅黑'
}
view ,text {
  box-sizing:border-box;
}
.index_top{
  width: 100%;
  height: 98rpx;
  padding: 4px;
  background: #f1f1f1;
  border-bottom: 1px solid #ccc;
  position: relative
}
.index_top input{
  border:1px solid #ccc;
  width:75%;
  height:70rpx;
  line-height: 70rpx;
  float:left;
  background: #fff;
  border-radius:6rpx;
  padding-left:30rpx;
  font-size: 30rpx;
}
.hideul{
  width:300rpx;
  /* height:60rpx; */
  padding-bottom:12rpx;
  padding-top:10rpx;
  padding-left:24rpx;
  height:auto;
  background: #fff;
  position:absolute;
  left:26rpx;
  top:80rpx;
  font-size: 26rpx;
  border:1px solid #ccc;
  border-top:none;
  border-radius:2rpx;
}
.index_top text{
  float:left;
  display:inline-block;
  border:1px solid #b31800;
  width:115rpx;
  height:70rpx;
  text-align: center;
  line-height: 70rpx;
  margin-left:20rpx;
  margin-top:4rpx;
  padding-left:18rpx;
  padding-right:18rpx;
  color:#b31800;
  font-size: 28rpx;
  border-radius:12rpx;
}
.index_main{
    width:100%;
    height:auto;
    padding-left:24rpx;
    padding-right:24rpx;
    font-size: 30rpx;
}
.index_main .top{
  width:100%;
  height:85rpx;
  line-height: 85rpx;
  border-bottom:1px solid #ccc;
  font-size: 30rpx;
}
.index_main ul li{
    width:100rpx;
    height:60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    color:#495a80;
    float:left;
    display:inline-block;
    background: #f1f1f1;
    margin-right:8rpx;
    margin-left:8rpx;
    text-align: center;
    border-radius:25rpx;
    margin-top:20rpx;
}
.footer_fixed{
  width:80rpx;
  height:80rpx;
  line-height: 80rpx;
  background: #495a80;
  text-align: center;
  color:#fff;
  border-radius:50%;
  position:fixed;
  right:40rpx;
  bottom:160rpx;
  font-size: 30rpx;
  box-shadow: 3px 3px 20px 3px #ccc;
}
.footer_tu{
  width:180rpx;
  height:40rpx;
  line-height: 40rpx;
  background: rgba(21,21,21,.3);
  text-align: center;
  color:#fff;
  border-radius:40rpx;
  position:fixed;
  /* right:40rpx; */
  left:50%;
  margin-left:-90rpx;
  bottom:80rpx;
  font-size: 20rpx;
    box-shadow: 3px 3px 20px #ccc;
}
