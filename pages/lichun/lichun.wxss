
 page{
  background:#fff;
  font-size:30rpx;
   font-family: '微软雅黑';
   padding-bottom:150rpx;
} 


 view,text{
    box-sizing: border-box;
} 

 .top{
  width:100%;
  height:200rpx;
  padding-top:70rpx;
  text-align: center;
  letter-spacing: 8px;
  font-size: 46rpx;
} 


.toptitle{
  width:60rpx;
  height:100rpx;
     border-radius:12rpx;   

   border:1px solid #5e8579; 
  margin:0 auto;
  text-align: center;
  font-size: 36rpx;
     padding-left:12rpx; 
     position:relative;
     color:#5e8579;
}

.toptitle .dot{
   display:block;
    position:absolute;
    right:-3rpx;
    top:-3rpx;
    background: #eb3f2f;
    border-radius:6rpx;
    width:12rpx;
    height:12rpx;
      
}

 .shiju{
  width:100%;
  height:auto;
  text-align: center;
  font-size: 20rpx;
} 

 .shiju ul li{
  display:block;
  height:35rpx;
  line-height: 35rpx;
}


.imgs{
  width:400rpx;
  height:400rpx;
  display: block;
 margin-left:auto;
 margin-right:auto;
 margin-top:30rpx;
 margin-bottom:40rpx;
} 

 .imgs image{
  width:100%;
  height:100%;
}
 
.main{
  padding-left:24rpx;
  padding-right:24rpx;
  padding-top:24rpx;
  margin-top:40rpx;
}

.title{
  font-size: 36rpx;
  height:50rpx;
  line-height: 50rpx;
  padding-bottom:14rpx;
  border-bottom:2px solid #495a80;
  color:#495a80;
}

.text{
  margin-top:30rpx;
  line-height: 50rpx;
   font-family: '微软雅黑';
  font-size: 24rpx;
}

.pic{
  width:80rpx;
  height:80rpx;
  line-height: 80rpx;
  background: #495a80;
  text-align: center;
  color:#fff;
  border-radius:50%;
  position:fixed;
  right:40rpx;
  bottom:460rpx;
  font-size: 30rpx;
  box-shadow: 3px 3px 20px #ccc;
}

